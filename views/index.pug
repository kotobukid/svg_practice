extends layout

block content
    #main
        #status(v-text="status_text")
        svg#svgmain(width="480" viewBox="0 0 300 300" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink")
            defs
                pattern#pattern-0(x="0" y="0" width="25" height="25" patternUnits="userSpaceOnUse" viewBox="0 0 100 100")
                    line(style="stroke: rgb(47, 47, 147);" x1="0" y1="0" x2="0" y2="100")
                    line(style="stroke: rgb(47, 47, 147);" x1="0" y1="100" x2="100" y2="100")
            rect(
                x="0" y="0" width="480" height="1000"
                @pointerdown="start"
                @pointerleave="leave"
                @pointermove="move"
                @pointerup="end"
            )