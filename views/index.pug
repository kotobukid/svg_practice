extends layout

block content
    #main
        #status(v-text="status_text")
        br
        svg(width="1000" height="1000" viewBox="0 0 1000 1000")
            rect(
                x="0" y="0" width="1000" height="1000"
                @pointerdown="touchstart"
                @pointerleave="leave"
                @pointermove="move"
                @pointerup="touchend"
            )